{# Tabler Webfont Icons Theme #}
{# @see https://tabler.io/icons/ #}

{% block icon -%}
    {% from '@KreyuDataTable/themes/base.html.twig' import attributes %}

    {# @var icon string #}
    {# @var icon_attr array #}
    <i{{ attributes(icon_attr|default({})|merge({
        class: ('ti ti-' ~ icon ~ ' ' ~ icon_attr.class|default(''))|trim,
    })) }}></i>
{%- endblock %}
